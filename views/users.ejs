<script language="javascript">


function register() {
	var challenge = document.getElementById( 'challenge' ).title;
	var username = document.getElementById( 'username' ).title;
	var registerRequest = {
		appId: "https://kirimanjirou.com:3334",
		challenge: challenge,
		version: "U2F_V2"
  };

  u2f.register("https://kirimanjirou.com:3334",[registerRequest], [], function (result) {
	  if (result.errorCode) {
    document.getElementById('status')
      console.log("Failed. Error code: " + result.errorCode);
    return;
	  }
	console.log(result);

	    document.getElementById('registrationData').value = result.registrationData;
	    document.getElementById('clientData').value = result.clientData;
  });
}


</script>
  <div id="challenge" title= "<%= challenge %>" />
  <div id="username" title= <%= user_email %> />
